                                <select name="moyenLocomotion"data-width="100%" class="custom_select">
                                    {% for key,val in form.moyenLocomotion.vars.choices %}
                                        <option value="{{ val.value }}" {{  form.moyenLocomotion.vars.value == '' and key == 0 ? ' selected ' :(val.value == form.moyenLocomotion.vars.value ? ' selected ' : '') }}>{{ val.label | trans }}</option>
                                    {% endfor %}
