                                <div class="show_compte_rendu">
                                    <h5>Compte rendu:</h5>
                                    <div class="show_compte_rendu_detail">
                                        <p>{{demandeur.description}}</p>
                                    </div>
                                </div>

                                <div class="group_action">
                                    <a href="{{ path('demandeur_edit', { 'id': demandeur.id }) }}">
